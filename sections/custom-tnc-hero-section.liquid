  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const sectionId = '{{ section.id }}';
      const container = document.getElementById(`carousel-${sectionId}`);
      if (!container) return;
      
      const track = document.getElementById(`carousel-track-${sectionId}`);
      // Select buttons using the class directly from the document to ensure they are found
      // even if they were dynamically inserted or if scope is tricky
      const prevBtn = container.querySelector(`.carousel-prev-${sectionId}`);
      const nextBtn = container.querySelector(`.carousel-next-${sectionId}`);
      
      let currentIndex = 0;
      const slides = track.children;
      const totalSlides = slides.length;
      let interval;

      // Touch handling variables
      let touchStartX = 0;
      let touchEndX = 0;
      
      function updateCarousel() {
        track.style.transform = `translateX(-${currentIndex * 100}%)`;
      }

      function nextSlide() {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateCarousel();
      }

      function prevSlide() {
        currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
        updateCarousel();
      }

      function startAutoPlay() {
        stopAutoPlay();
        interval = setInterval(nextSlide, 5000);
      }

      function stopAutoPlay() {
        if (interval) clearInterval(interval);
      }

      // Event Listeners for Buttons
      if (prevBtn) {
          prevBtn.onclick = function(e) {
             e.preventDefault();
             e.stopPropagation(); // Stop event bubbling
             prevSlide();
             startAutoPlay(); // Reset timer
          };
      }
      
      if (nextBtn) {
          nextBtn.onclick = function(e) {
             e.preventDefault();
             e.stopPropagation(); // Stop event bubbling
             nextSlide();
             startAutoPlay(); // Reset timer
          };
      }

      // Touch Events for Mobile Swipe
      track.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
        stopAutoPlay(); // Stop resizing while interacting
      }, { passive: true });

      track.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
        startAutoPlay();
      }, { passive: true });

      function handleSwipe() {
        // Threshold for swipe detection
        if (touchEndX < touchStartX - 50) {
          nextSlide(); // Swipe Left -> Next
        }
        if (touchEndX > touchStartX + 50) {
          prevSlide(); // Swipe Right -> Prev
        }
      }

      // Start auto play
      startAutoPlay();
    });
  </script>
