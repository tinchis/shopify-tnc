{% schema %}
{
  "name": "Custom TNC Footer",
  "tag": "footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#0C0C0C"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Custom TNC Footer"
    }
  ]
}
{% endschema %}

<div class="w-full py-24 px-6 md:px-20" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="max-w-[1400px] mx-auto flex flex-col md:flex-row gap-20 md:gap-40">
    
    <!-- Left Column: Newsletter Text Only -->
    <div class="flex flex-col gap-6 max-w-lg w-full">
      <h3 class="text-xl font-medium tracking-wide !text-[#ADADAD]">Mantente en el flujo</h3>
      <p class="text-[#ADADAD] text-lg leading-relaxed max-w-sm">
        Tips de cuidado consciente, rituales naturales y novedades que nutren cuerpo, piel y cabello.
      </p>
    </div>

    <!-- Right Column: Legal Links -->
    <div class="flex flex-col gap-6 w-full md:w-auto mt-2 md:mt-0">
      <ul class="flex flex-col gap-4">
        <li><a href="{{ routes.root_url }}" class="text-[#ADADAD] hover:text-white text-xl no-underline transition-colors">Inicio</a></li>
        <li><a href="{{ routes.all_products_collection_url }}" class="text-[#ADADAD] hover:text-white text-xl no-underline transition-colors">Catálogo</a></li>
        <li><a href="{{ pages.contact.url | default: '/pages/contact' }}" class="text-[#ADADAD] hover:text-white text-xl no-underline transition-colors">Contacto</a></li>
      </ul>
    </div>
  </div>

  <div class="max-w-[1400px] mx-auto mt-24">
    <p class="text-[#525252] text-2xl">© {{ 'now' | date: "%Y" }} lindodespertarnamaste.com</p>
  </div>
</div>
